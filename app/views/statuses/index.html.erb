<h1>Listing statuses</h1>

<table>
  <tr>
    <th>Name</td>
		<th>Proceed</td>
  </tr>

<% @statuses.each do |status| %>
  <tr>
    <td><%= status.name %></td>
		<td align="center"><%= status.proceed %></td>
      <td><%= link_to(image_tag("/images/edit.png", {:alt => 'edit', :class=>"rollover"}), {:controller => 'status', :action => 'edit', :id => status }) %></td>    
      <td><%= link_to(image_tag("/images/delete.jpg", {:alt => 'destroy', :class=>"rollover"}), {:controller => 'status', :action => 'destroy', :id => status }, :confirm => 'Are you sure?', :method => :delete) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to image_tag("/images/Add.png"), new_status_path %>