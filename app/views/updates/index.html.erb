<h1>Listing updates</h1>

<table>
  <tr>
    <th>Musher</th>
    <th>Checkpoint</th>
    <th>Timein</th>
    <th>Dogsin</th>
    <th>Timeout</th>
    <th>Dogsout</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @updates.each do |update| %>
  <tr>
    <td><%= update.musher.name %></td>
    <td><%= update.checkpoint.name %></td>
    <td>
			<% if update.timein.nil? %>
				<%= %>
			<% else %>
				<%= show_date update.timein %>
			<% end %>
		</td>
    <td align="center"><%= update.dogsin %></td>
    <td>
			<% if update.timeout.nil? %>
				<%= %>
			<% else %>
				<%= show_date update.timeout %>
			<% end %>
		</td>
    <td align="center"><%= update.dogsout %></td>
		<td><%= link_to(image_tag("/images/edit.png", {:alt => 'edit', :class=>"rollover"}), {:controller => 'updates', :action => 'edit', :id => update }) %></td> 
		<td><%= link_to(image_tag("/images/delete.jpg", {:alt => 'destroy', :class=>"rollover"}), update, :confirm => 'Are you sure?', :method => :delete) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Update', new_update_path %>
